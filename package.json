{
  "name": "anon-kafka-mirror",
  "version": "1.1.1",
  "main": "index.js",
  "repository": "git@github.com:nodefluent/anon-kafka-mirror.git",
  "author": "nodefluent",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn tsc",
    "clean": "rimraf dist",
    "docker:build": "docker-compose build --no-cache",
    "docker:down": "docker-compose down",
    "docker:up": "docker-compose up -d",
    "docker": "yarn docker:build && yarn docker:up",
    "lint": "tslint \"lib/**/*.ts\" --project tsconfig.json",
    "setup": "docker-compose up -d",
    "start": "node dist/index.js",
    "test:all": "yarn build && yarn lint && yarn test:cov",
    "test:cov": "nyc mocha",
    "test:watch": "mocha --watch",
    "test": "mocha",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/faker": "^4.1.2",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.4",
    "@types/pino": "^4.7.1",
    "chai": "^4.1.2",
    "mocha": "^5.1.1",
    "nyc": "^11.7.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.5",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "commander": "^2.14.1",
    "faker": "^4.1.0",
    "immutable": "^3.8.2",
    "kafka-streams": "^4.1.0",
    "pino": "^4.16.1"
  },
  "preferGlobal": true,
  "bin": {
    "anon-kafka-mirror": "dist/index.js"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/**",
      "dist/**",
      "lib/config/default.ts",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "all": true
  }
}
